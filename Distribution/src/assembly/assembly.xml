<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>all</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <!--项目README 文件-->
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <!--项目部署文档 -->
        <fileSet>
            <directory>../Distribution/src/resources</directory>
            <includes>
                <include>Product-Deployment-Documentation.docx</include>
            </includes>
            <outputDirectory>\</outputDirectory>
        </fileSet>
        <!--项目source文件-->
        <fileSet>
            <directory>../Distribution/bin</directory>
            <includes>
                <include>env_realTimeFaceCompare.sh</include>
            </includes>
            <outputDirectory>\</outputDirectory>
        </fileSet>
        <!--项目模块-->
        <fileSet>
            <directory>../Cluster/target/cluster-1.5.0</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>cluster</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Dubbo/target/bigdata-api-1.5.0</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>service</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../FtpServer/target/ftp-1.5.0</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>ftp</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Service/target/service-1.5.0</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>service</outputDirectory>
        </fileSet>
        <!--项目公共脚本-->
        <fileSet>
            <directory>${project.basedir}/bin</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>env_realTimeFaceCompare.sh</exclude>
            </excludes>
            <fileMode>0755</fileMode>
            <outputDirectory>common/bin</outputDirectory>
        </fileSet>
        <!--项目公共jar包-->
        <fileSet>
            <directory>../Cluster/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>common/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Dubbo/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>common/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../FtpServer/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>common/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Service/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>common/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../JNI/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>common/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../UDF/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>common/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Util/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>common/lib</outputDirectory>
        </fileSet>
        <!--项目公共配置文件-->
        <fileSet>
            <directory>../Distribution/src/resources</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <outputDirectory>common/conf</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>